<%- include('../partials/header') %>

<div class="container justify-center">
    <div class="col-md-8 col-lg-6 col-xl-4 mx-auto">
        <h1 class="mb-5">Add a product</h1>
        <form class="mt-3" action="/products" method="POST">
            <div class="mb-3">
                <label for="productName" class="form-label">Product name</label>
                <input type="text" class="form-control" id="productName">
            </div>
            <div class="mb-3">
                <label for="productCategory" class="form-label">Category</label>
                <select name="productCategory" class="form-select" id="productCategory">
                    <option value="empty"></option>
                    <option value="fruit-veg">Fruit/Veg</option>
                    <option value="dairy">Dairy</option>
                    <option value="cereals">Cereals</option>
                    <option value="meat">Meat</option>
                    <option value="fat">Fat</option>
                    <option value="snack">Snack</option>
                    <option value="condiments">Condiments</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="productBarcode" class="form-label">Barcode</label>
                <input type="text" class="form-control" id="productBarcode">
            </div>
            <div class="mb-3">
                <label for="kcal" class="form-label">Kcal</label>
                <input type="text" class="form-control" id="kcal">
            </div>
            <div class="mb-3">
                <label for="carbs" class="form-label">Carbs</label>
                <input type="text" class="form-control" id="carbs">
            </div>
            <div class="mb-3">
                <label for="proteins" class="form-label">Proteins</label>
                <input type="text" class="form-control" id="proteins">
            </div>
            <div class="mb-3">
                <label for="fat" class="form-label">Fat</label>
                <input type="text" class="form-control" id="fat">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
            
        </form>
    </div> 
</div>

<%- include('../partials/footer') %>