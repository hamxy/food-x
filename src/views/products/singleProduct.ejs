<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col">
            <h1><%= product.name %></h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= product.name %></h5>
                  <h6 class="card-subtitle mb-2 text-body-secondary"><%= product.category %></h6>
                  <p class="card-text m-0">kcal: <%= product.kcal %></p>
                  <p class="card-text m-0">carbs: <%= product.carbs %></p>
                  <p class="card-text m-0">proteins: <%= product.proteins %></p>
                  <p class="card-text m-0">fat: <%= product.fat %></p>
                  <a href="/products" class="card-link">Back</a>
                  <a href="/products/<%= product.id %>/edit" class="card-link">Edit</a>
                </div>
              </div>
        </div>
    </div>

</div>


<%- include('../partials/footer') %>