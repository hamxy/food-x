<%- include('../partials/header') %>

<div class="container justify-center">
    <div class="col-md-8 col-lg-6 col-xl-4 mx-auto">
        <h1 class="mb-5">Add a product</h1>

        <!-- Form -->
        <form class="mt-3" action="/products" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Product name</label>
                <input type="text" class="form-control" name="name">
            </div>
            <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select name="category" class="form-select">
                    <option value="empty"></option>
                    <option value="fruit-veg">Fruit/Veg</option>
                    <option value="dairy">Dairy</option>
                    <option value="cereals">Cereals</option>
                    <option value="meat">Meat</option>
                    <option value="fat">Fat</option>
                    <option value="snack">Snack</option>
                    <option value="condiments">Condiments</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="barcode" class="form-label">Barcode</label>
                <input type="text" class="form-control" name="barcode">
            </div>
            <div class="mb-3">
                <label for="kcal" class="form-label">Kcal</label>
                <input type="text" class="form-control" name="kcal">
            </div>
            <div class="mb-3">
                <label for="carbs" class="form-label">Carbs</label>
                <input type="text" class="form-control" name="carbs">
            </div>
            <div class="mb-3">
                <label for="proteins" class="form-label">Proteins</label>
                <input type="text" class="form-control" name="proteins">
            </div>
            <div class="mb-3">
                <label for="fat" class="form-label">Fat</label>
                <input type="text" class="form-control" name="fat">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
            
        </form>
    </div> 
</div>

<%- include('../partials/footer') %>